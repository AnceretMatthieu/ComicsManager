@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <h3>Elements récents...</h3>
    <div class="col-md-3">
        <h4><a asp-controller="Comics" asp-action="Index">Bandes-dessinées</a></h4>        
        <ul>
            @foreach (var comic in ViewBag.LastComics)
            {
                <li><a asp-controller="Comics" asp-action="Details" asp-route-id="@comic.Id">@comic.Title</a></li>
            }
        </ul>
    </div>
    <div class="col-md-3">
        <h4><a asp-controller="Authors" asp-action="Index">Auteurs</a></h4>
        <ul>
            @foreach (var author in ViewBag.LastAuthors)
            {
                <li><a asp-controller="Authors" asp-action="Details" asp-route-id="@author.Id">@author.FullName</a></li>
            }
        </ul>
    </div>
    <div class="col-md-3">
        <h4><a asp-controller="Editors" asp-action="Index">Editeurs</a></h4>
        <ul>
            @foreach (var editor in ViewBag.LastEditors)
            {
                <li><a asp-controller="Editors" asp-action="Details" asp-route-id="@editor.Id">@editor.Name</a></li>
            }
        </ul>
    </div>
    <div class="col-md-3">
        <h4><a asp-controller="Genres" asp-action="Index">Genres</a></h4>
        <ul>
            @foreach (var genre in ViewBag.LastGenres)
            {
                <li><a asp-controller="Genres" asp-action="Details" asp-route-id="@genre.Id">@genre.Title</a></li>
            }
        </ul>
    </div>
</div>
